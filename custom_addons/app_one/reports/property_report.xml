<odoo>
    <record id="property_record" model="ir.actions.report">
        <field name="name">Property Report</field>
        <field name="model">property</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_model_id" ref="model_property"/>
        <field name="binding_type">report</field>
        <field name="report_name">app_one.property_report_template</field>
    </record>

    <template id="property_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="rec">
                    <h1 style="font-family:'JacquardaBastarda9-Regular';">Property Report</h1>

                    <style>
                        table {
                        width: 100%;
                        border: 1px solid #b3adad;
                        border-collapse: collapse;
                        padding: 5px;
                        }
                        table th {
                        border: 1px solid #b3adad;
                        padding: 5px;
                        background: #f0f0f0;
                        color: #313030;
                        }
                        table td {
                        border: 1px solid #b3adad;
                        text-align: center;
                        padding: 5px;
                        background: #ffffff;
                        color: #313030;
                        }
                    </style>

                    <!-- General Information Table -->
                    <table>
                        <thead>
                            <tr>
                                <th colspan="4">General Information</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Name</td>
                                <td>
                                    <t t-esc="rec.name"/>
                                </td>
                                <td>Postcode</td>
                                <td>
                                    <t t-esc="rec.postcode"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Additional Information Table -->
                    <table>
                        <thead>
                            <tr>
                                <th colspan="4">Additional Information</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Owner</td>
                                <td>
                                    <t t-esc="rec.owner_id.name"/>
                                </td>
                                <td>Phone</td>
                                <td>
                                    <t t-esc="rec.owner_phone"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>

                    <!-- Description and Area Table -->
                    <table>
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Area (mÂ²)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="rec.line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <t t-esc="line.description"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.area"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </t>
            </t>
        </t>
    </template>
</odoo>
